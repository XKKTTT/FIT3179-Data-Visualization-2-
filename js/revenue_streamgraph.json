{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#fdfaf4",
  "width": 900,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/XKKTTT/FIT3179-Data-Visualization-2-/refs/heads/main/data/inbound-tourism-expenditure-of-visitors-by-products.csv"
  },
  "layer": [
    {
      "mark": "area",
      "params": [{
        "name": "Products",
        "select": {"type": "point", "fields": ["Products"]},
        "bind": "legend",
        "value": "Country-specific tourism characteristic goods"
      }],
      "encoding": {
        "x": {
          "timeUnit": "year",
          "field": "Year",
          "axis": {"domain": false, "format": "%Y", "tickSize": 0}
        },
        "y": {
          "aggregate": "sum",
          "field": "Value in RM Million",
          "axis": null,
          "stack": "center"
        },
        "color": {
          "field": "Products",
          "scale": {"scheme": "category20b"},
          "legend": {
            "titleFontSize": 20,
            "titleFont": "Montserrat",
            "labelFontSize": 14,
            "labelFont": "Montserrat",
            "symbolSize": 200
          }
        },
        "opacity": {
          "condition": {"param": "Products", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Year", "type": "temporal", "title": "Date"},
          {"field": "Products", "type": "nominal", "title": "Product"},
          {"field": "Value in RM Million", "type": "quantitative", "title": "Value (RM Million)"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 10,
        "dy": -10,
        "fontWeight":"bold",
        "fontSize": 14,
        "font": "Montserrat",
        "color": "#000"
      },
      "encoding": {
        "text": {"value": "Country-specific tourism characteristic goods"},
        "x": {"value": 150},
        "y": {"value": 350}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "top",
        "dx": 10,
        "dy": -10,
        "fontWeight":"bold",
        "fontSize": 14,
        "font": "Montserrat",
        "color": "#000"
      },
      "encoding": {
        "text": {"value": "contributes most to tourism revenue"},
        "x": {"value": 150},
        "y": {"value": 370}
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"value": 400},  
        "y": {"value": 330},  
        "x2": {"value": 550}, 
        "y2": {"value": 200}, 
        "color": {"value": "black"},
        "size": {"value": 2}
      }
    }
  ]
}
